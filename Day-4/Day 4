#  Question 3 (DATABASE)

import sqlite3

conn = sqlite3.connect("db1.db")

# Table 1

conn.execute('''
create table user(
usid INTEGER PRIMARY KEY AUTOINCREMENT,
usnm VARCHAR(200),
pass VARCHAR(199),
M_number VARCHAR(200),
email VARCHAR(200)
)
''')
# Table 2
import sqlite3

conn = sqlite3.connect("shop.db")

conn.execute('''
CREATE TABLE customer(
    cid INTEGER PRIMARY KEY AUTOINCREMENT,
    cname VARCHAR(150),
    password VARCHAR(100),
    phone VARCHAR(20),
    email VARCHAR(150)
)
''')

