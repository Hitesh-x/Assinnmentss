
# Question 1 (CSV)

import csv
data =  [
    ["Name", "Age","College"],
    ["Sname","S25","SKIT"],
    ["Rname", "R23","RTU"]
]
with open("data.csv", "w", newline="") as file:
    writer = csv.writer(file)
    for x in data:
        writer.writerow(x)
print("CSV Created Successfully")

